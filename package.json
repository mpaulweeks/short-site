{
  "name": "short-site",
  "version": "0.1.0",
  "private": true,
  "dependencies": {},
  "scripts": {
    "bs": "yarn tsc-utils && lerna bootstrap",
    "build:app": "yarn bs && cd packages/app && yarn build",
    "deploy:app": "yarn build:app && yarn dev:copy && gh-pages -d packages/app/build",
    "dev:copy": "cp local/db.json packages/app/build",
    "dev:files": "http-server local --cors=If-Modified-Since, Range",
    "run:api": "cd packages/api && yarn start",
    "run:app": "cd packages/app && yarn start",
    "run:scrape": "cd packages/utils && yarn scrape",
    "setup": "yarn install && cd packages/utils && yarn install && cd ../.. && yarn bs",
    "tsc-utils": "cd packages/utils && yarn tsc"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "lerna": "^3.13.4",
    "typescript": "^3.4.5"
  }
}
